<ShowPassbox>:
    id: box
    orientation: 'vertical'
    padding:[0,20,0,20]
    spacing: 25
    size_hint: 0.9, 0.45
    pos_hint:{"center_x":0.5}
    valign: "center"
    md_bg_color: 0.12,0.12,0.12,1
    MDLabel:
    	id: cardlabel
    	text: root.set_title
    	theme_text_color: "Primary"
    	size_hint_y: 0.2
    	font_size: "17.5sp"
    	halign:"center"
    	valign:"center"
    GridLayout:
        id: textgrid
        cols: 2
        size_hint_y: 0.6
        size_hint_x: 0.9
        pos_hint:{"center_x":0.5}
        MDLabel:
            text: root.set_label1
            text_align:'right'
            font_size: "16sp"
            size_hint_x:0.33
            theme_text_color: "Primary"
        MDTextField:
            id: site
            text: root.site_name
            size_hint_x:0.67
            multiline:False
            line_color_normal: 1,1,1,0.5
            color_mode:"custom"
            line_color_focus: 0.4745,0.9137,0.3882,1
            font_size: "18sp"
            required: True
            on_focus: root.bindevent()
            on_text: root.showsavebutton(site.text)
            helper_text_mode: "on_error"
            helper_text: "Enter text"
        MDLabel:
            text: root.set_label2
            text_align:'right'
            font_size: "16sp"
            size_hint_x: 0.33
            theme_text_color: "Primary"
        MDTextField:
            id: passw
            text: root.passw
            size_hint_x:0.67
            multiline:False
            line_color_normal: 1,1,1,0.5
            color_mode:"custom"
            line_color_focus: 0.4745,0.9137,0.3882,1
            font_size: "18sp"
            required: True
            on_focus: root.bindevent()
            on_text: root.showsavebutton(passw.text)
            helper_text_mode: "on_error"
            helper_text: "Enter text"
        MDLabel:
            id : mlabel
            text: "Master Password:"
            text_align:'right'
            font_size: "16sp"
            size_hint_x: 0.33
            theme_text_color: "Primary"
        MDTextField:
            id: mpassw
            text: ""
            size_hint_x:0.67
            password: not checkbox.active
            multiline:False
            line_color_normal: 1,1,1,0.5
            color_mode:"custom"
            line_color_focus: 0.4745,0.9137,0.3882,1
            font_size: "18sp"
            required: True
            helper_text_mode: "on_error"
            helper_text: "Enter text"
    GridLayout:
        id : checkboxgrid
        cols:2
        size_hint: [0.5,0.05]
        pos_hint:{"center_x":0.6}
        MDCheckbox:
            id:checkbox
            size_hint:None,None
            size: "25dp" ,"25dp"
            pos_hint: {"center_x":1}
            selected_color: 0.4745,0.9137,0.3882,1
        MDLabel:
            id : showpassword
            pos_hint: {"center_x":1, "center_y":0.3}
            text: '  show password'
            font_size: "15sp"
            theme_text_color:"Primary"
    
    MDLabel:
        size_hint_y: 0.05
    GridLayout:
        id:btngrid
        cols: 2
        spacing:[30,10]
        size_hint_y: 0.25
        size_hint_x: 0.8
        pos_hint: {"center_x":0.5}
        MDFillRoundFlatIconButton:
            id: okbutt
            text: 'Close'
            icon:"close"
            font_size: "6.5sp"
            on_press: root.parent.parent.parent.closePassBox() if root.set_title!="Enter Details (Quick Save)" else root.parent.closePassBox()
            theme_text_color: "Primary"
            md_bg_color:0.25,0.25,0.25,1
            ripple_scale: 2.75
            size_hint_x:0.7
        MDFillRoundFlatIconButton:
            id: delbutt
            text: 'Delete'
            icon: "delete-outline"
            font_size: "6.5sp"
            on_press: root.delconfirm()
            theme_text_color: "Primary"
            md_bg_color:0.89,0.26,0.12,0.8
            ripple_scale: 2.75
            size_hint_x:0.7
        MDFillRoundFlatIconButton:
            id: confirmbutt
            font_size: "6.5sp"
            text: 'Confirm'
            icon: "check"
            on_press: 
                root.delete(site.text)
                root.parent.parent.parent.closePassBox()
            theme_text_color: "Primary"
            md_bg_color:0.89,0.26,0.12,0.8
            ripple_scale: 2.75
            size_hint_x:0.7
        MDFillRoundFlatIconButton:
            id: savebutt
            text: 'Save'
            icon: "content-save"
            font_size: "6.5sp"
            on_press: 
                root.saveedit()
                root.parent.parent.parent.closePassBox() if root.set_title!="Enter Details (Quick Save)" else root.parent.closePassBox()
            theme_text_color: "Primary"
            text_color: 0,0,0,0.8
            ripple_scale: 2.75
            size_hint_x:0.7
            md_bg_color:0.1176,0.6478,0.2667,1

<CustomButton>:
    md_bg_color: 0.1,0.1,0.1,0
    ripple_scale : 0
    theme_text_color: "Primary"
    font_size: "7sp"
    on_press: root.parent.parent.parent.parent.parent.read(root.text)
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 0.7
        RoundedRectangle:
            size: self.size[0]+10,self.size[1]+10
            pos: self.pos[0]-5,self.pos[1]-5
            radius:[20,20,20,20]
    
<Mainlayout>:
    name:'main'
	id : mainlayout
    FloatLayout:
        id: floatbox
        MDBoxLayout:
            id:mainbox
            orientation: 'vertical'
            padding:["0dp","10dp","0dp","0dp"]
            ScrollView:
                id: scrollpasslist
                do_scroll_x: False
                do_scroll_y: True
                size_hint_y:1
                on_touch_down: root.ids.fab.close_stack()
                StackLayout:
                    id: passlist
                    spacing:[25,]
                    padding: [30,0,0,0]
                    size_hint_y: None
                    height:self.minimum_height
                    
                
        MDFloatingActionButtonSpeedDial:
            id:fab
            data:{"help":"Help", "folder-key": "Create new keys", 'floppy':"Backup",'circle-edit-outline':"Edit login details",'plus': "Add password"}
            icon:'dots-vertical'
            bg_color_root_button: 0.1176,0.6578,0.2667,1
            bg_color_stack_button: 0.1176,0.6578,0.2667,1
            label_text_color: 0.02,0.02,0.02,1
            size_hint: None, None
            pos_hint: {"right":0.95, "top":0.123}
            callback: root.showAddbox
    
<Loginlayout>:
    name: 'login'
    BoxLayout:
    	id: loginbox
        size_hint: root.set_boxsize
        pos_hint: {"center_x":0.5, "center_y":root.setpos}
        orientation: "vertical"
        MDLabel:
        	text: root.set_label
            size_hint: 0.7, None
            height: "50dp"
            pos_hint: {"center_x":0.5}
            font_size:"18sp"
            halign: 'center'
            theme_text_color: "Custom"
            text_color: root.set_color
		MDTextField:
            id: username
            hint_text:'Enter Username'
            font_size: "19sp"
            size_hint: 0.7, None
            height:"50dp"
            pos_hint:{"center_x":0.5}
            multiline:False
            line_color_normal: 1,1,1,0.5
            color_mode: 'custom'
            line_color_focus: 0.4745,0.9137,0.3882,1
        MDTextField:
            id: loginpassw
            hint_text: root.set_passhint
            font_size: "19sp"
            size_hint: 0.7, None
            height:"50dp"
            pos_hint:{"center_x":0.5}
            password: not checkbox.active
            multiline:False
            line_color_normal: 1,1,1,0.5
            color_mode: 'custom'
            line_color_focus: 0.4745,0.9137,0.3882,1
        GridLayout:
            cols:2
            size_hint:0.76, None
            height:"20dp"
            pos_hint:{"center_x":0.55}
            MDCheckbox:
                id:checkbox
                size_hint:None,None
                size: "25dp" ,"25dp"
                pos_hint: {"center_x":0.5}
                selected_color: 0.4745,0.9137,0.3882,1
            MDLabel:
                pos_hint: {"center_x":0.5, "center_y":0.3}
                text: '  show password'
                font_size: "15sp"
                theme_text_color:"Primary"
        MDLabel:
            size_hint: 1,None
            height:"25dp"
        GridLayout:
            id: restoregrid
            cols:2
            size_hint: 0.8, None
            height:"35dp"
            pos_hint:{"center_x":0.5}
            spacing: [30,10]
            MDFillRoundFlatButton:
                id:checkbtn
                font_size:"6sp"
                text:root.btntext
                size_hint_x: 0.3
                text_color: 0.1176,0.8878,0.2667,1
                md_bg_color: 0.1176,0.6878,0.2667,0.2
                on_press: root.check(loginpassw.text)
                ripple_scale: 2.75
            MDRoundFlatButton:
                id:restorebtn
                font_size:"6sp"
                size_hint_x: 0.3
                text:"RESTORE"
                text_color: 0.1176,0.8878,0.2667,1
                on_press: root.restore(loginpassw.text)
            MDRoundFlatButton:
                id:quickbtn
                font_size:"6sp"
                size_hint_x: 0.4
                text:"QUICK ADD"
                text_color: 0.1176,0.8878,0.2667,1
                on_press: root.quicksave()
        	
<WarnDialog>:
	title: "Help"
	title_align:"center"
	title_size:"18sp"
	size_hint:0.8, 0.6
	separator_height: "0dp"
	MDBoxLayout:
		spacing: 20
		padding:[0,20,0,20]
		orientation: "vertical"
		size_hint:1, 0.95
		pos_hint:{"center_x":0.5,"center_y":0.5}
		ScrollView:
			do_scroll_y: True
			size_hint_y: 0.89
			MDLabel:
				text:"**Choose strong master password/passphrase**\n1. Different actions are listed under three-dot-menu in bottom right corner.\n2. Add password: This button will allow to add new password details for specified site/app to saved passwords list.\n3. Edit login details: This button will allow to edit your login(username and master password) details for app.\n4. Backup: This button will backup your password list. You can find backup file in \"android/data/com.managepass/\".\n5. Create new keys: This button will create new encryption keys.\n6. Quick add: This button will allow to quickly add passwords using master password. This passwords will be added to password list once you login (Enter correct master password or passwords will get lost).\n\nNote:\n1. Login may take few seconds to verify master password.\n2. Restore function will restore your backup data using previous login details. Backup file should be located in above mentioned directory. This will happen only once.\n3. Periodically use \"Create new keys\" function."
				font_size: "15sp"
				theme_text_color: "Primary"
				size_hint: 1, None
				height: self.texture_size[1]
		MDRoundFlatButton:
			text: "OK"
			md_bg_color:[0.2,0.2,0.2,1]
			size_hint: 1, 0.11
			font_size:"7sp"
			on_press: root.dismiss()
	
